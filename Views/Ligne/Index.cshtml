<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <title>ALSA Caisse | Lignes</title>
    <link rel="stylesheet" href="~/css/css2/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/css2/custom.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="body-overlay"></div>
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><img src="~/img/alsa-logo.png" class="img-fluid" /></h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a  href="@Url.Action("Index", "FDR")">
                        <i class="material-icons">description</i>FDR
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Machiniste")">
                        <i class="material-icons">person</i><span>Machinistes</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Vehicule")">
                        <i class="material-icons">directions_bus</i>
                        <span>Véhicules</span>
                    </a>
                </li>
                <li>
                    <a style="color: black;background-color: #00B1FE;" href="@Url.Action("Index", "Ligne")">
                        <i class="material-icons">directions</i>Ligne
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Encaissement")">
                        <i class="material-icons">attach_money</i>Encaissement
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Login", "Compte")">
                        <i class="material-icons">logout</i>Déconnexion
                    </a>
                </li>
            </ul>
        </nav>
        <div id="content">
            <div class="top-navbar">
                <div class="xp-topbar">
                    <div class="row">
                        <div class="col-2 col-md-1 col-lg-1 order-2 order-md-1 align-self-center">
                            <div class="xp-menubar">
                                <span class="material-icons text-white">
                                    signal_cellular_alt
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-wrapper">
                            <div class="table-title">
                                <form action="@Url.Action("Index", "Ligne")" method="post">
                                    <div class="row" style="height:1cm">
                                        <div>
                                            <input style="margin-left: 15cm;border-radius:5px;padding: 10px 6px 0 6px" type="text" name="search" />
                                            <button style="background:DeepSkyBlue;border:0;border-radius:5px;padding: 10px 6px 0 6px;" type="submit">
                                                <i class="material-icons">search</i>
                                            </button>
                                            <button style="background:DeepSkyBlue;border:0;border-radius:5px;padding: 10px 6px 0 6px;" type="submit">
                                                <i class="material-icons">refresh</i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Ligne</th>
                                        <th>Tarif</th>
                                        <th>Centre</th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Lignes != null)
                                    {
                                        foreach (var fdr in Model.Lignes)
                                        {
                                            <tr>
                                                <td>@fdr.ligne</td>
                                                <td>@fdr.Tarif</td>                                                                                                
                                                <td style="font-size: 14px;">@fdr.Centre</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="pagination">
                                @if (Model.TotalPages > 1)
                                {
                                    @if (Model.Page > 1)
                                    {
                                        <a style="margin-right:10px" href="@Url.Action("Index", "Ligne", new { page = Model.Page - 1, search = Model.SearchTerm })" class="btn btn-primary material-icons">arrow_back</a>
                                    }
                                    @if (Model.Page < Model.TotalPages)
                                    {
                                        <a href="@Url.Action("Index", "Ligne", new { page = Model.Page + 1, search = Model.SearchTerm })" class="btn btn-primary material-icons">arrow_forward</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="~/js/js/jquery-3.3.1.slim.min.js"></script>
    <script src="~/js/js/popper.min.js"></script>
    <script src="~/js/js/bootstrap.min.js"></script>
    <script src="~/js/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".xp-menubar").on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
            $(".xp-menubar,.body-overlay").on('click', function () {
                $('#sidebar,.body-overlay').toggleClass('show-nav');
            });
        });
    </script>
</body>
</html>


